/**index.wxss**/

.head {
  width: 100%;
  position: relative;
  height: 500rpx;
  overflow: hidden;
}

.weatherBj {
  position: absolute;
  width: 100%;
  height: 500rpx;
  z-index: 5;
}

.weather {
  position: relative;
  z-index: 10;
  padding-top: 60rpx;
}

.weather .weaImg {
  width: 60rpx;
  padding-left: 44rpx;
}

.wend {
  color: #fff;
  font-size: 140rpx;
  padding-left: 25rpx;
}

.fenl {
  align-self: flex-end;
  color: #fff;
  font-size: 26rpx;
  padding-bottom: 36rpx;
}

.fenl view text {
  padding-right: 35rpx;
}

.weatBtom {
  position: absolute;
  bottom: 0;
  z-index: 10;
  width: 100%;
  height: 60rpx;
  padding: 0 36rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.3);
}

/* 地址搜索框 */

.weatMain {
  width: 100%;
  margin-top: 120rpx;
}

.relative {
  position: relative;
  width: 100%;
  justify-content: center;
  display: flex;
}

.search {
  width: 80%;
  height: 84rpx;
  border: 1px solid #dcdcdc;
  border-radius: 42rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.search .locImg {
  width: 40rpx;
}

.search input {
  margin-left: 30rpx;
  color: #aaa;
  font-size: 32rpx;
  width: 85%;
  flex-shrink: 0;
}

/* 查询 */

.query {
  width: 80%;
  height: 84rpx;
  border: 1px solid #faefdf;
  border-radius: 42rpx;
  background: #fdbe15;
  margin-top: 50px;
  color: #fff;
}

.gslogo {
  width: 170rpx;
  height: 45rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 搜索框 */

.text_box {
  border-bottom: 1px solid #c3c3c3;
  height: 60rpx;
  line-height: 60rpx;
}

.searchList {
  width: 80%;
  max-height: 310rpx;
  position: absolute;
  bottom: 140rpx;
  z-index: 99;
  background: #fff;
  padding: 0 30rpx;
  border: 1px solid #fdbe15;
}
