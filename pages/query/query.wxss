/* pages/query/query.wxss */
page{
  background: #f0eff5;
}
.qHead{
  width: 100%;
  height: 400rpx;
  background: #fff;
}
.advertising{
  width: 100%;
  height: 400rpx;
}
.relative{
  position: relative;
}
.qPath{
  height: 100rpx;
  /* overflow: hidden; */
}
.pitchMain{
  position: absolute;
  top: 100rpx;
  left: 0;
  width: 100%;
}
.pathPitch{
  width: 100%;
  height: 100rpx;
  background: #fff;
  font-size: 28rpx;
}
.pathPitch.y{
  color: #fba72f;
}
.pathList{
  width: 100%;
  height: 100rpx;
  font-size: 28rpx;
  /* color: #fba72f; */
  padding: 0 40rpx;
  box-sizing: border-box;
  background: #fff;
  border-bottom: 1px solid #dcdcdc;
}
.sjt{
  width: 24rpx;
  height: 24rpx;
}
.jt{
  width: 24rpx;
  display: none;
}
.jt.on{
  display: block;
}
.p10{
  padding-left: 10rpx;
}
.circuit{
  overflow: hidden;
}
.cirList{
  width: 100%;
  height: 210rpx;
  background: #fff;
  margin-top: 10rpx;
  padding: 0 40rpx 36rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  overflow: hidden;
}
.cirL{
  text-align: right;
  flex-shrink: 0;
  margin-top: 36rpx;
}
.cTj{
  padding: 10rpx;
  background: #18cc00;
  color: #fff;
  border-radius: 6rpx;
}
.cTime,.cMsg{
  margin: 10rpx 0;
  color: #707070;
}
.cirR{
  overflow: hidden;
  max-width: 78%;
}
.cRjt{
  width: 20rpx;
  margin-left: 34rpx;
}
.cName{
  display: -webkit-inline-flex;
  display: inline-flex;
  font-size: 28rpx;
  font-weight: bold;
}
.cNameList{
  padding-right: 8rpx;
}
.cScz{
  height: 50rpx;
  line-height: 50rpx;
  border: 1px solid #fba72f;
  border-radius: 6rpx;
}
.cScz text{
  color: #fff;
  padding: 0 10rpx;
  margin-right: 10rpx;
  background: #fba72f;
  height: 50rpx;
  display: inline-block;
}